@{
    ViewBag.Title = "Inicio";
    ViewBag.FullWidth = true;
    var productosRecientes = ViewBag.ProductosRecientes as List<Proyecto_Leyva_Cars.Models.Productos> ?? new List<Proyecto_Leyva_Cars.Models.Productos>();
}

    <!-- HERO/BUSCADOR AUTOPARTES -->
    <section class="hero-search-section">
        <div class="hero-search-container">
            <!-- Títulos -->
            <h1 class="hero-title">
                REPUESTOS AL POR MAYOR Y MENOR
            </h1>
            <h2 class="hero-subtitle">
                PARA TODO TIPO DE VEHÍCULO
            </h2>

            <!-- Formulario de Búsqueda -->
            <form class="search-form">
                <!-- Campo Marca -->
                <div class="search-field">
                    <label class="search-label">Marca</label>
                    <select class="search-select">
                        <option value="">Seleccione Marca</option>
                        <option value="citroen">Citroën</option>
                        <option value="peugeot">Peugeot</option>
                        <option value="renault">Renault</option>
                        <option value="ford">Ford</option>
                        <option value="chevrolet">Chevrolet</option>
                        <option value="toyota">Toyota</option>
                        <option value="nissan">Nissan</option>
                        <option value="hyundai">Hyundai</option>
                    </select>
                </div>

                <!-- Campo Modelo -->
                <div class="search-field">
                    <label class="search-label">Modelo</label>
                    <select class="search-select">
                        <option value="">Seleccione Modelo</option>
                        <option value="c3">C3</option>
                        <option value="208">208</option>
                        <option value="clio">Clio</option>
                        <option value="fiesta">Fiesta</option>
                        <option value="spark">Spark</option>
                    </select>
                </div>

                <!-- Campo Año -->
                <div class="search-field">
                    <label class="search-label">Año</label>
                    <select class="search-select">
                        <option value="">Selecciona el año</option>
                        <option value="2024">2024</option>
                        <option value="2023">2023</option>
                        <option value="2022">2022</option>
                        <option value="2021">2021</option>
                        <option value="2020">2020</option>
                        <option value="2019">2019</option>
                        <option value="2018">2018</option>
                    </select>
                </div>

                <!-- Botón de Búsqueda -->
                <button type="submit" class="search-button">
                    <svg xmlns="http://www.w3.org/2000/svg" class="search-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    Buscar
                </button>
            </form>

            <!-- Texto informativo -->
            <p class="hero-info-text">
                Encuentra el repuesto perfecto para tu vehículo en segundos
            </p>
        </div>
    </section>

    <!-- CARRUSEL DE MARCAS -->
    <section class="brand-carousel-section">
        <div class="brand-carousel-container">
            <div class="brand-carousel-track" id="brandCarouselTrack">
                <img src="~/Assets/imagenes/hondalogo.png" alt="Marca 1" class="brand-carousel-img" />
                <img src="~/Assets/imagenes/chevroletlogo.png" alt="Marca 2" class="brand-carousel-img" />
                <img src="~/Assets/imagenes/kialogo.png" alt="Marca 3" class="brand-carousel-img" />
                <img src="~/Assets/imagenes/logotoyota.png" alt="Marca 4" class="brand-carousel-img" />
                <img src="~/Assets/imagenes/fordlogo.png" alt="Marca 5" class="brand-carousel-img" />
                <img src="~/Assets/imagenes/nissanlogo.png" alt="Marca 6" class="brand-carousel-img" />
            </div>
        </div>
    </section>
    <link rel="stylesheet" href="/Assets/css/brand-carousel.css" />
    <script src="/Assets/js/brand-carousel.js"></script>

<!-- NUEVOS INGRESOS -->
    <link rel="stylesheet" href="~/Assets/css/productos.css" />
    <section class="nuevos-ingresos-section">
        <div class="nuevos-ingresos-header">
            <h2 class="nuevos-ingresos-title">NUEVOS INGRESOS</h2>
            <p class="nuevos-ingresos-subtitle">Descubre los últimos productos agregados a nuestro catálogo</p>
        </div>

        <div class="productos-container">
            @if (productosRecientes.Any())
            {
                foreach (var producto in productosRecientes.Take(10))
                {
                    <div class="producto-card">
                        <div class="producto-image">
                            @if (!string.IsNullOrEmpty(producto.UrlImagen))
                            {
                                <img src="@producto.UrlImagen" alt="@producto.Nombre" />
                            }
                            else
                            {
                                <div class="producto-no-image">
                                    <span class="material-symbols-outlined">car_repair</span>
                                </div>
                            }
                        </div>
                        <div class="producto-info">
                            <h3 class="producto-nombre">@producto.Nombre</h3>
                            <p class="producto-categoria">@producto.Categoria</p>
                            <p class="producto-marca">@producto.Marca</p>
                            <div class="producto-precio">
                                @if (producto.Precio.HasValue)
                                {
                                    <span class="precio">S/ @producto.Precio.Value.ToString("F2")</span>
                                }
                                else
                                {
                                    <span class="precio">Consultar precio</span>
                                }
                            </div>
                            <div class="producto-stock">
                                @if (producto.Stock.HasValue && producto.Stock > 0)
                                {
                                    <span class="stock-disponible">Stock: @producto.Stock</span>
                                }
                                else
                                {
                                    <span class="stock-agotado">Sin stock</span>
                                }
                            </div>
                            <button class="producto-btn">Ver detalles</button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-productos">
                    <p>No hay productos disponibles en este momento.</p>
                </div>
            }
        </div>
    </section>

    </section>