@{
    ViewBag.Title = "Verificar Email";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verificar Email</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- EmailJS -->
    <script type="text/javascript" src="@("https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js")"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #ffffff;
            padding: 20px;
        }

        .form-container {
            width: 100%;
            max-width: 480px;
            background: #ffffff;
            border-radius: 28px;
            padding: 48px 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        }

        .form-header {
            text-align: center;
            margin-bottom: 36px;
        }

        .icon-circle {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

            .icon-circle i {
                font-size: 36px;
                color: #fff;
            }

        .form-title {
            font-size: 28px;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 8px;
        }

        .form-subtitle {
            font-size: 14px;
            color: #6b7280;
            line-height: 1.6;
        }

        .code-input {
            width: 100%;
            height: 60px;
            text-align: center;
            font-size: 24px;
            font-weight: 600;
            letter-spacing: 8px;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            margin: 24px 0;
            transition: all 0.3s ease;
        }

            .code-input:focus {
                outline: none;
                border-color: #667eea;
                box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            }

        .btn-submit {
            width: 100%;
            height: 52px;
            background: #667eea;
            border: none;
            border-radius: 12px;
            color: #ffffff;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-submit:hover {
                background: #5568d3;
                transform: translateY(-1px);
            }

        .alert {
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .alert-error {
            background: #fee;
            color: #c00;
            border: 1px solid #fcc;
        }

        .alert-success {
            background: #efe;
            color: #0a0;
            border: 1px solid #cfc;
        }

        .resend-link {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #6b7280;
        }

            .resend-link a {
                color: #667eea;
                text-decoration: none;
                font-weight: 600;
                cursor: pointer;
            }

                .resend-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-header">
            <div class="icon-circle">
                <i class="bi bi-envelope-check-fill"></i>
            </div>
            <h1 class="form-title">Verifica tu email</h1>
            <p class="form-subtitle">
                Hemos enviado un código de 6 dígitos a<br>
                <strong>@ViewBag.Correo</strong>
            </p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-error">
                <i class="bi bi-exclamation-circle"></i> @ViewBag.Error
            </div>
        }

        <div id="email-status"></div>

        @using (Html.BeginForm("VerificarEmail", "Usuarios", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <input type="text"
                   name="codigo"
                   class="code-input"
                   placeholder="000000"
                   maxlength="6"
                   pattern="[0-9]{6}"
                   required
                   autocomplete="off">

            <button type="submit" class="btn-submit">
                <i class="bi bi-check-circle"></i> Verificar Código
            </button>
        }

        <div class="resend-link">
            ¿No recibiste el código? <a onclick="reenviarCodigo()">Reenviar</a>
        </div>
    </div>

    <script>
        // Verificar si EmailJS está disponible
        if (typeof emailjs === 'undefined') {
            console.error('EmailJS no se cargó correctamente');
            document.getElementById('email-status').innerHTML =
                '<div class="alert alert-error">❌ Error: No se pudo cargar el servicio de email</div>';
        } else {
            // Inicializar EmailJS
            (function(){
                emailjs.init("dvSRA4xzb1l3afJhI");
            })();

            // Enviar email automáticamente al cargar la página
            window.onload = function() {
                enviarEmail();
            };
        }

        function enviarEmail() {
            if (typeof emailjs === 'undefined') {
                alert('Error: Servicio de email no disponible');
                return;
            }

            const statusDiv = document.getElementById('email-status');
            statusDiv.innerHTML = '<div class="alert alert-success">📧 Enviando código...</div>';

            const templateParams = {
                to_email: '@ViewBag.Correo',
                codigo: '@ViewBag.Codigo',
                to_name: '@ViewBag.NombreUsuario'
            };

            emailjs.send('service_5i6eqao', 'template_8t4p3fm', templateParams)
                .then(function(response) {
                    console.log('Email enviado!', response);
                    statusDiv.innerHTML = '<div class="alert alert-success">✅ Código enviado a tu correo</div>';
                    setTimeout(() => statusDiv.innerHTML = '', 3000);
                }, function(error) {
                    console.error('Error:', error);
                    statusDiv.innerHTML = '<div class="alert alert-error">❌ Error al enviar el código</div>';
                });
        }

        function reenviarCodigo() {
            enviarEmail();
        }
    </script>
</body>
</html>